<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/search_view">
            <EditText
                android:id="@+id/edt_id_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/id_vehicle"
                />
            <EditText
                android:id="@+id/edt_name_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name_vehicle"
                />
            <EditText
                android:id="@+id/edt_type_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/type_vehicle"
                />
            <EditText
                android:id="@+id/edt_price_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/price_vehicle"
                />
        </LinearLayout>


        <Button
            android:id="@+id/btn_add_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ThÃªm"
            android:layout_below="@id/rcv_displace"
            android:layout_marginTop="20dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_displace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</layout>